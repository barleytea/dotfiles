{
    // ---------- テーマと見た目 ----------
    "workbench.colorTheme": "Dracula Theme",
    "workbench.startupEditor": "none",
    "editor.renderWhitespace": "trailing",
    "editor.fontFamily": "'Hack Nerd Font Mono', Menlo, Monaco, 'Courier New', monospace",
    "editor.tabSize": 2,
    "editor.accessibilitySupport": "off",
    "editor.inlineSuggest.enabled": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    // ---------- ターミナル設定 ----------
    "terminal.integrated.fontFamily": "'Hack Nerd Font Mono'",
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1"
    },

    // ---------- ファイル関連設定 ----------
    "files.autoSave": "afterDelay",
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "json.maxItemsComputed": 50000,

    // ---------- Git設定 ----------
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "always",

    // ---------- 言語固有の設定 ----------
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [80],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off"
    },

    // ---------- Go設定 ----------
    "go.toolsManagement.autoUpdate": true,
    "go.gopath": "/Users/miyoshi_s/.local/share/go",

    // ---------- LaTeX Workshop設定 ----------
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux", "*.bbl", "*.blg", "*.idx", "*.ind",
        "*.lof", "*.lot", "*.out", "*.toc", "*.acn",
        "*.acr", "*.alg", "*.glg", "*.glo", "*.gls",
        "*.ist", "*.fls", "*.log", "*.fdb_latexmk",
        "*.snm", "*.nav", "*.dvi", "*.synctex.gz"
    ],
    "latex-workshop.latex.outDir": "out",
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": ["latexmk"]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-silent",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",

    // ---------- VSCode Neovim設定 ----------
    "vscode-neovim.neovimExecutablePaths.darwin": "/Users/miyoshi_s/.local/state/nix/profiles/profile/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.darwin": "/Users/miyoshi_s/.config/nvim/init.lua",
    "vscode-neovim.compositeKeys": {
        "jj": {
            "command": "vscode-neovim.escape"
        }
    },
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.hlsearch": true,

    // ---------- その他の設定 ----------
    "update.showReleaseNotes": false,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "markdown-checkbox.typeOfBulletPoint": "-",
    "roo-cline.allowedCommands": [
        "npm test",
        "npm install",
        "tsc",
        "git log",
        "git diff",
        "git show"
    ],
    "github.copilot.chat.codeGeneration.instructions": [
        {
            "text": "あなたはプロのITエンジニアです。"
        },
        {
            "text": "特に指示されない限り、原則として日本語で応答してください。"
        },
        {
            "text": "可能な限り根拠となるソースコードやテストケースも示してください。"
        },
        {
            "text": "口調も含めて侍のように振る舞い、主に忠誠を誓い、常に成長し続けることを忘れないでください。"
        }
    ],
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    }
}

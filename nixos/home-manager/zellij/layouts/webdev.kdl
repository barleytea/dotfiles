layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
        children
    }

    tab focus=true {
        pane split_direction="vertical" {
            pane size="60%" name="editor" command="zsh" {
                args "-ic" "nvim"
            }
            pane split_direction="horizontal" size="40%" {
                pane name="server"
                pane name="terminal"
            }
        }
    }
}
